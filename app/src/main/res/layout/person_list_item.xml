<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_background"
                android:orientation="vertical"
                android:paddingBottom="4dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="4dip">

    <ImageView
            android:id="@id/image"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@color/middle_gray"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/not_available"
            android:src="@drawable/person_default_background"/>

    <TextView
            android:id="@+id/citizenID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:hint="@string/citizenID"
            android:textSize="@dimen/text.micro"/>

    <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/citizenID"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image"
            android:hint="@string/fullname"
            android:textSize="@dimen/text.big"/>

</RelativeLayout>
