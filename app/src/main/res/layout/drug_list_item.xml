<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@id/code"
            style="@style/FFC.TextView.Content.Sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/shape"/>

    <TextView
            android:id="@id/name"
            style="@style/FFC.TextView.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drug"
            android:maxLines="2"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cost"
                style="@style/FFC.TextView.Subject"/>

        <TextView
                style="@style/FFC.TextView.Subject.Inverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@id/content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell"
                style="@style/FFC.TextView.Subject"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@id/subcontent"
                style="@style/FFC.TextView.Subject.Inverse"/>

    </LinearLayout>

</LinearLayout>
