<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.head_info"/>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.patient_type"/>

            <RadioGroup
                    android:id="@+id/patient_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@id/rad1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/ncd.patient_type_1"/>

                <RadioButton
                        android:id="@id/rad2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ncd.patient_type_2"/>
            </RadioGroup>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.patient_group"/>

            <RadioGroup
                    android:id="@+id/patient_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@id/rad1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/ncd.dm"/>

                <RadioButton
                        android:id="@id/rad2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/ncd.hbp"/>

                <RadioButton
                        android:id="@id/rad3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ncd.both"/>
            </RadioGroup>

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.head_screeninfo"/>

            <LinearLayout
                    android:id="@+id/screeninfo_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.weight"/>

                <EditText
                        android:id="@+id/weight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/kilogram"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.height"/>

                <EditText
                        android:id="@+id/height"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/centimeter"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.bmi"/>

                <EditText
                        android:id="@+id/bmi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:digits="0123456789."
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/kg_msqr"
                        android:inputType="numberDecimal"
                        android:maxLength="7"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.waist"/>

                <EditText
                        android:id="@+id/waist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/centimeter"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.bph_1"/>

                <EditText
                        android:id="@+id/bp_h1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/mmhg"
                        android:inputType="numberDecimal"
                        android:maxLength="7"/>

                <EditText
                        android:id="@+id/bp_l1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/mmhg"
                        android:inputType="numberDecimal"
                        android:maxLength="7"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ncd.bph_2"/>

                <EditText
                        android:id="@+id/bp_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/mmhg"
                        android:inputType="numberDecimal"
                        android:maxLength="7"/>

                <EditText
                        android:id="@+id/bp_l2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:hint="@string/mmhg"
                        android:inputType="numberDecimal"
                        android:maxLength="7"/>

                <TextView
                        style="@style/FFC.TextView.Subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/NCD.BSTEST"/>

                <th.in.ffc.widget.ArrayFormatSpinner
                        android:id="@+id/bstest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/NCD.BSTEST"/>

                <LinearLayout
                        android:id="@+id/bsl_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <TextView
                            style="@style/FFC.TextView.Subject"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/NCD.BSLEVEL"/>

                    <EditText
                            android:id="@+id/bsl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789."
                            android:hint="@string/mgdl"
                            android:inputType="numberDecimal"
                            android:maxLength="10"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.inveterview"/>

            <CheckBox
                    android:id="@+id/q1"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.dmfamily"/>

            <CheckBox
                    android:id="@+id/q2"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.waist_question"/>

            <CheckBox
                    android:id="@+id/q3"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.hbp_question"/>

            <CheckBox
                    android:id="@+id/q4"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.bsl_question"/>

            <CheckBox
                    android:id="@+id/q5"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.bfl_question"/>

            <CheckBox
                    android:id="@+id/q6"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.dmpreg_question"/>

            <CheckBox
                    android:id="@+id/qht"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.htfamily"/>

            <CheckBox
                    android:id="@+id/qarmpit"
                    style="@style/FFC.TextView.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/ncd.armpit_question"/>

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.head_behavior"/>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NCD.SMOKE"/>

            <th.in.ffc.widget.ArrayFormatSpinner
                    android:id="@+id/smoke"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/NCD.SMOKE"/>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NCD.ALCOHOL"/>

            <th.in.ffc.widget.ArrayFormatSpinner
                    android:id="@+id/alcohol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/NCD.ALCOHOL"/>

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.head_symptom"/>

            <CheckBox
                    android:id="@+id/hasSymptom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dip"
                    android:text="@string/ncd.hasSymptom"/>

            <LinearLayout
                    android:id="@+id/symtom_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/eyecheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingLeft="30dip"
                            android:text="@string/organ.eye"/>

                    <EditText
                            android:id="@+id/eyeNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/urinalcheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingLeft="30dip"
                            android:text="@string/organ.urinal"/>

                    <EditText
                            android:id="@+id/urinalNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/footcheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingLeft="30dip"
                            android:text="@string/organ.foot"/>

                    <EditText
                            android:id="@+id/footNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/heartcheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingLeft="30dip"
                            android:text="@string/organ.hearth"/>

                    <EditText
                            android:id="@+id/heartNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/braincheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:paddingLeft="30dip"
                            android:text="@string/organ.brain"/>

                    <EditText
                            android:id="@+id/brainNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    style="@style/FFC.TextView.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.head_general"/>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.servplace"/>

            <RadioGroup
                    android:id="@+id/servplace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@id/rad1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/in_place"/>

                <RadioButton
                        android:id="@id/rad2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/out_place"/>
            </RadioGroup>

            <TextView
                    style="@style/FFC.TextView.Subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ncd.isService"/>

            <CheckBox
                    android:id="@+id/asServiceCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dip"
                    android:text="@string/ncd.asService"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
