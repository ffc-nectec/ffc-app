<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/holo_red_dark"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/holo_orange_light"/>
            <corners
                    android:radius="2dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                    android:startColor="@color/holo_red_dark"
                    android:endColor="@color/holo_orange_dark"
                    android:angle="90"
                    />
            <stroke
                    android:width="1dp"
                    android:color="@color/holo_orange_light"/>
            <corners
                    android:radius="2dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:drawable="@drawable/button_disable"/>

</selector>
